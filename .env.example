# Environment Variables Template
# Copy this to .env.local and fill in your values

# ============================================
# DATABASE (Supabase/Neon/Vercel Postgres)
# ============================================
DATABASE_URL="postgresql://user:password@host:5432/skinluxe?sslmode=require"
DIRECT_URL="postgresql://user:password@host:5432/skinluxe?sslmode=require"

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================
NEXTAUTH_SECRET="generate-a-random-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
# Production: https://skinluxe-meerut.vercel.app

# ============================================
# EMAIL (SendGrid/Resend/SMTP)
# ============================================
# Option 1: SMTP
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="SkinLuxe <noreply@skinluxe-meerut.com>"

# Option 2: SendGrid
SENDGRID_API_KEY="your-sendgrid-api-key"

# Option 3: Resend
RESEND_API_KEY="your-resend-api-key"

# ============================================
# SMS (Twilio)
# ============================================
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ============================================
# PAYMENT (Razorpay)
# ============================================
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"

# ============================================
# ANALYTICS
# ============================================
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# ============================================
# ADMIN
# ============================================
ADMIN_EMAIL="admin@skinluxe-meerut.com"
ADMIN_PASSWORD="change-this-password"

# ============================================
# SITE CONFIGURATION
# ============================================
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
# Production: https://skinluxe-meerut.vercel.app
NEXT_PUBLIC_SITE_NAME="SkinLuxe Aesthetics & Academy"
